    @model IEnumerable<LibraryProject.Models.Book>

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Available Books</h2>

            </div>
        </div>
        <br />
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Book Name
                        </th>
                        <th>
                            Author Name
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td width="30%">@book.BookName</td>
                            <td width="30%">@book.Author</td>
                            @*<td>
                                <div class="col-6 text-right">
                                    <a asp-controller="BookController1" asp-action="Update" asp-route-Id="@book.Id" class="btn btn-outline-primary">Update</a>

                                    <a asp-controller="BookController1" asp-action="Delete" asp-route-Id="@book.Id" class="btn btn-outline-danger">Delete</a>
                                </div>
                            </td>*@
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No Books available</p>
        }


    </div>

